@inherits LayoutComponentBase

<HxMessenger Position="ToastContainerPosition.BottomCenter" />
<HxMessageBoxHost />

<div class="d-md-flex min-vh-100">
    <ErrorBoundary @ref="errorBoundaryComponent">
        <ErrorContent Context="exception">
            <div class="main p-4 flex-grow-1">
                <Havit.OpenAIChatPOC.Web.Client.Pages.Errors.GenericError Exception="exception" OnRecover="() => errorBoundaryComponent?.Recover()" />
            </div>
        </ErrorContent>
        <ChildContent>
            <div class="main p-4 flex-grow-1">
                @Body
            </div>
        </ChildContent>
    </ErrorBoundary>
</div>